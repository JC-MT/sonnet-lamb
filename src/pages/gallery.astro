  <GalleryPage />
  <script>
    import { Application } from "@hotwired/stimulus";
    import SliderController from "../controllers/slider_controller";

    window.Stimulus = Application.start();
    Stimulus.register("slider", SliderController);
  </script>
</BaseLayout>
